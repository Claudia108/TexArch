<h2><%= @video.title %></h2>

<div class="row">
  <div class="col-md-7">
    <p><%= raw(@link) %></p>
  </div>
    <div class="col-md-4 content-box">
      <h3>Description</h3>
      <p><%= @video.description %></p>

      <% if admin_authenticated %>
      <div>
        <p><%= link_to "Edit Video", edit_admin_video_path(@video), class: "btn btn-primary" %></p>
        <p><%= link_to "Delete Video", admin_video_path(@video), method: :delete, data: { confirm: 'Are you sure you want to delete this video?' }, class: "btn btn-primary" %></p>
      </div>
      <% end %>
    </div>
</div>
