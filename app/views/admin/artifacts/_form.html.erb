<div class="row input-form">

  <div class= "col-md-8">

    <%= form_for @artifact, url: url, html: { multipart: true } do |f| %>

      <fieldset class="form-group col-md-6">
        <%= f.label :ui %>
        <%= f.text_field :ui, class: "form-control number" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :max_thickness %>
        <%= f.text_field :max_thickness, class: "form-control", placeholder: "Input in mm" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :max_length %>
        <%= f.text_field :max_length, class: "form-control", placeholder: "Input in mm" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :max_width %>
        <%= f.text_field :max_width, class: "form-control number", placeholder: "Input in mm" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :basal_edge_width %>
        <%= f.text_field :basal_edge_width, class: "form-control", placeholder: "Input in mm" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.file_field :image, class: "form-control-file"%>
      </fieldset>

      <fieldset class="form-group col-md-3">
        <%= f.select :point_type, options_for_select([['Andice'], ['Bell'], ['Calf Creek']]), { prompt: "Choose the Point Type" }, class: "c-select" %>
      </fieldset>

      <fieldset class="form-group col-md-3">
        <%= f.collection_select :site_id, Site.all, :id, :name, { prompt: "Choose the Site" }, class: "c-select" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= link_to "Add a New Site", new_admin_site_path, class: "btn btn-primary"%>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.submit message, class: "btn btn-primary" %>
      </fieldset>

    <% end %>

  </div>
