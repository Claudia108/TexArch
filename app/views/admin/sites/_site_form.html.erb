<div class="row input-form">

  <div class= "col-md-8">

    <%= form_for @site, url: url do |f| %>

      <fieldset class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control number" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :trinominal %>
        <%= f.text_field :trinominal, class: "form-control number" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :description %>
        <%= f.text_field :description, class: "form-control number" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :longitude %>
        <%= f.text_field :longitude, class: "form-control text", placeholder: "Input as decimal, like this: -97.70975" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.label :latitude %>
        <%= f.text_field :latitude, class: "form-control", placeholder: "Input as decimal, like this: 30.89225" %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.file_field :image, class: "form-control-file"%>
      </fieldset>

      <div class="c-input c-radio col-md-3 radio-button-line" id="radio1">
        <%= radio_button_tag(:site_type, "public_site") %>
        <%= label_tag(:public_site, "Public Site")  %>
      </div>

      <div class="c-input c-radio col-md-3 radio-button-line" id="radio2">
        <%= radio_button_tag(:site_type, "private_site") %>
        <%= label_tag(:private_site, "Private Site") %>
      </div>

      <fieldset class="form-group col-md-8">
        <%= f.submit message, class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>
